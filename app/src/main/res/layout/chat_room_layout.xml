<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.chat_room.ChatRoomFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvMessageList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/vSeparator">


    </androidx.recyclerview.widget.RecyclerView>

    <View
        android:id="@+id/vSeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toTopOf="@+id/rlSendMessageContainer">
    </View>

    <RelativeLayout
        android:id="@+id/rlSendMessageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <ImageButton
            android:id="@+id/btnSendMessage"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/send_button_selector"
            android:src="@drawable/ic_baseline_send_24"
            android:tooltipText="Send">

        </ImageButton>
        <EditText
            android:id="@+id/etMessageText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:hint="@string/enter_message"
            android:inputType="text"
            android:maxLines="6"
            android:background="@android:color/transparent"
            android:layout_toStartOf="@+id/btnSendMessage"
            >

        </EditText>



    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>